{
  "version": 2,
  "builds": [
    {
      "src": "/apps/backend/src/main.ts",
      "use": "@vercel/node"
    },
    {
      "src": "/apps/frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/apps/backend/src/main.ts",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/(.*)",
      "dest": "/apps/frontend/.next",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    }
  ]
}
