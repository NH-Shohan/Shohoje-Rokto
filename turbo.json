{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "inputs": ["src/**/*", "package.json"],
      "outputMode": "full",
      "dependsOn": ["^build"],
      "outputs": ["apps/frontend/.next", "apps/backend/dist"]
    },
    "dev": {
      "cache": false
    }
  }
}
